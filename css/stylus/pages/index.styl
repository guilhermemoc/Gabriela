




.menu
  width: 100%
  height: 1.5em
  background-color: #53233a
  z-index: 9999999999999999;
  position: absolute;
  p
    font-family: g-light;
    font-size: 10pt;
    color: #fbb533;
    text-align: left;
    width: 100%;
    line-height: 2em;
    margin-left: 1%;
    strong
      font-family: Gotham






.logo-gabriela
  margin-bottom: 1em;

.intro-header
    font-family: Gotham
    font-size: 13pt
    color: #562435
    text-align: center
    margin-top: calc(100vh / 10)
    width: 100%
    // font-weight: 600
    line-height: 2em
    padding-bottom: 2em

.intro-header-bot
    font-family: Gotham
    font-size: 13pt
    color: #562435
    text-align: center
    width: 100%
    font-weight: 600
    line-height: 2em

  .m-left
    margin-left: 30%


.btn-compra
    width: 100%
    height: 3.5em
    border-radius: 24px
    background-color: #2f7e34
    color: #fff
    border: none
    margin-top: 2em
    transition: 0.4s ease-in
    &:hover
      background-color: $rx
      cursor: pointer;


.bottom-bar
  width: 100%
  height: auto
  position: fixed;
  background: transparent
  bottom: 0
  z-index: 9999999999999999;

.left
  float: left

.right
  float: right

.white{
  color: $bc
  }

.share
  background-color: $rx
  width: 3em
  height: 3em
  border-radius: 50%
  text-align: center
  border: none
  margin-left: 0.5%
  margin-bottom: 0.5%
  transition: 0.5s ease-in-out
  &:hover
    background-color: $vd
    color: $am !important
    cursor: pointer



.espetaculo
  width: 100%
  height: 100vh
  background-color: $rx


.navigation
    border-radius: 50%;
    width: 3%;
    height: auto;
    display: block;
    margin-top: 40vh;
    position: fixed;
    right: 0;
    z-index: 9999999999999999999;
.navigation li
    background-color: #4d2035;
    border-radius: 50%;
    width: 0.5em;
    height: 0.5em;
    display: block;
    margin: 1em auto;
    transition: 0.4s ease-in
    &:hover
      background-color: transparent;
      border: 1px solid $rx
      cursor: pointer;
